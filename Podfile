target 'Podium' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Podium

  target 'PodiumTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'PodiumUITests' do
    inherit! :search_paths
    # Pods for testing
  end

	pod 'Firebase/Core'
	pod 'Firebase/Auth'
	pod 'Firebase/Database'
	pod 'Firebase/Storage'

end
